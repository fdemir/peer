{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "rootDir": "./",
    "paths": {
      "~/*": ["src/*"]
    },
    "outDir": "out"
  },
  "include": ["./src/**/*.ts"]
}
